<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RedTheme" parent="AppTheme">
        <item name="android:windowBackground">#FF0000</item>
    </style>
    <style name="YellowTheme" parent="AppTheme">
        <item name="android:windowBackground">#FFFF00</item>
    </style>
    <style name="GreenTheme" parent="AppTheme">
        <item name="android:windowBackground">#008000</item>
    </style>
</resources>